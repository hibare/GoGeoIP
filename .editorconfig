# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Go files
[*.go]
indent_style = tab
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Git files
[.git*]
trim_trailing_whitespace = false

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Configuration files
[*.{json,toml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
